<main class="form-signin w-25 m-auto mt-5">
  <h1 class="h3 mb-3 fw-normal text-center">Subir documentos</h1>

  {{#if user}}
    <div class="alert alert-danger text-center" role="alert">
      {{user._id}}
    </div>

    <form
      action="/api/users/{{user._id}}/documents"
      enctype="multipart/form-data"
      method="post"
    >
      <div class="form-floating mt-4">
        <div class="mb-3 text-center rounded-4 border border-primary p-1">
          <label for="profile" class="form-label">Subir imagen de
            <strong>perfil</strong></label>
          <input
            class="form-control"
            type="file"
            id="profile"
            name="profile"
            multiple
          />
        </div>
        <div class="mb-3 text-center rounded-4 border border-primary p-1">
          <label for="product" class="form-label">Subir imagen de un
            <strong>producto</strong></label>
          <input
            class="form-control"
            type="file"
            id="product"
            name="product"
            multiple
          />
        </div>
        <div class="mb-3 text-center rounded-4 border border-primary p-1">
          <label for="document" class="form-label">Subir un
            <strong>documento</strong></label>
          <input
            class="form-control"
            type="file"
            id="document"
            name="document"
            multiple
          />
        </div>
      </div>
      <button class="btn btn-primary w-100 mt-2" type="submit">Enviar</button>
    </form>
  {{/if}}
</main>